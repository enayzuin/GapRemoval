<UserControl x:Class="GapRemovalApp.AudioSensitivityControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="300">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="Sensibilidade:" Margin="0,0,10,0" VerticalAlignment="Center"/>
        <Slider x:Name="SensitivitySlider"
                Minimum="-60" Maximum="-10" Value="-40"
                Width="150" ValueChanged="SensitivitySlider_ValueChanged"/>
        <TextBlock x:Name="ValueLabel" Text="-40 dB" Margin="10,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
