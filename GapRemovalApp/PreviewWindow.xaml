<Window x:Class="GapRemovalApp.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview dos Silêncios" Height="702" Width="1066"
        Background="#1E1E1E" Foreground="White" FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <DockPanel Margin="20,20,20,80">

        <!-- Rodapé com barra de tempo -->
        <Grid DockPanel.Dock="Bottom" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="203*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="CurrentTimeText" Text="00:00" VerticalAlignment="Center" Grid.Column="0" HorizontalAlignment="Left"/>
            <Slider x:Name="ProgressSlider" VerticalAlignment="Center" Margin="10,0,10,0" Grid.Column="1" Grid.ColumnSpan="2"/>
            <TextBlock x:Name="TotalTimeText" Text="00:00" VerticalAlignment="Center" Grid.Column="3" HorizontalAlignment="Left" Margin="32,0,0,0"/>
        </Grid>

        <!-- Waveform (inserido aqui, entre player e barra de tempo) -->
        <Canvas x:Name="WaveformCanvas"
                Height="100"
                DockPanel.Dock="Bottom"
                Background="#2A2A2A"
                Margin="0,10,0,10" />

        <!-- Player de vídeo -->
        <Border Background="Black" BorderBrush="#444" BorderThickness="1" DockPanel.Dock="Top" Height="748">
            <MediaElement x:Name="Player"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Manual"
                          Stretch="Uniform"
                          Margin="0,0,3,268" />
        </Border>
    </DockPanel>
</Window>