<Window x:Class="GapRemovalApp.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview dos Silêncios" Height="500" Width="872"
        Background="#1E1E1E" Foreground="White" FontFamily="Segoe UI">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Slider -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Barra de Progresso -->
            <RowDefinition Height="Auto"/>
            <!-- Botão -->
        </Grid.RowDefinitions>

        <TextBlock Text="🧠 Trechos silenciosos detectados:" FontSize="16" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Sensibilidade de silêncio:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Slider x:Name="SensitivitySlider" Minimum="-60" Maximum="-10" Value="-40"
                    Width="200" ValueChanged="SensitivitySlider_ValueChanged"/>
            <TextBlock x:Name="SensitivityValueText" Text="-40"
                       Margin="10,0,0,0" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Barra de Progresso para mostrar o processamento -->
        <ProgressBar x:Name="ProgressBar" Grid.Row="3" Height="20" IsIndeterminate="True" Visibility="Collapsed" />

        <ListBox x:Name="SilentPartsList" Grid.Row="2"
                 Background="#2A2A2A" BorderBrush="#444"
                 Foreground="White" FontSize="14"/>

        <!-- Adicionando o TextBlock para mostrar o caminho do vídeo -->
        <TextBlock x:Name="VideoLabel" Grid.Row="0" Margin="0,10,0,10" FontSize="14" FontWeight="Bold"/>

        <Button x:Name="ProcessButton" Grid.Row="4" Content="Exportar Vídeo"
                Height="35" Margin="0,20,0,0"
                Click="ProcessButton_Click"
                Background="#007ACC" />
    </Grid>
</Window>
